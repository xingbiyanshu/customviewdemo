<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CircleViewActivity">

    <com.sissi.customviewdemo.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        app:radius="40dp"
        app:color="@android:color/holo_red_light"
        app:radius2="80dp"
        app:color2="@android:color/holo_green_light"
        app:radius3="120dp"
        app:color3="@android:color/holo_blue_light"
        app:radius4="160dp"
        app:color4="@android:color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>