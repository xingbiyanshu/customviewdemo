<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="radius" format="dimension"/>
        <attr name="color" format="color"/>
        <attr name="radius2" format="dimension"/>
        <attr name="color2" format="color"/>
        <attr name="radius3" format="dimension"/>
        <attr name="color3" format="color"/>
        <attr name="radius4" format="dimension"/>
        <attr name="color4" format="color"/>
        <attr name="radius5" format="dimension"/>
        <attr name="color5" format="color"/>
        <attr name="radius6" format="dimension"/>
        <attr name="color6" format="color"/>
    </declare-styleable>

    <declare-styleable name="FlexboxLayout">
        <attr name="poemMode" format="boolean"/> <!--诗歌模式。一行只一个item，且item之间自动缩进-->
        <attr name="indent" format="dimension"/> <!--每行的缩进。仅"poemMode=true"时有效-->
        <attr name="itemGap" format="dimension"/> <!--item之间的间隙。仅"poemMode=false"时有效-->
        <attr name="rowGap" format="dimension"/> <!--行之间的间隙-->
    </declare-styleable>

</resources>